<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_white"
            android:gravity="center_vertical"
    >

        <CheckBox
                android:id="@+id/default_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:theme="@style/MyCheckBox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/advice_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:id="@+id/advice_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toStartOf="@id/allow"
                app:layout_constraintStart_toEndOf="@+id/default_check"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Advice"
        />
        <TextView
                android:id="@+id/advice_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/allow"
                app:layout_constraintStart_toEndOf="@+id/default_check"
                app:layout_constraintTop_toBottomOf="@id/advice_title"
                tools:text="Advice aaaa"
                tools:visibility="visible"
        />

        <ImageButton
                android:id="@+id/allow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/app_white"
                android:src="@drawable/ic_allow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_allow"
        />
        <View
                android:id="@+id/border"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                style="@style/item_setting_border"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>